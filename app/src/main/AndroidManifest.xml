<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Nutritrack"
        tools:targetApi="31">
        <activity
            android:name=".presentation.activities.ClinicianDashboard"
            android:exported="false"
            android:label="@string/title_activity_clinician_dashboard"
            android:theme="@style/Theme.Nutritrack" />
        <activity
            android:name=".presentation.activities.ClinicianLogin"
            android:exported="false"
            android:label="@string/title_activity_clinician_login"
            android:theme="@style/Theme.Nutritrack" />
        <activity
            android:name=".presentation.activities.NutriCoachScreen"
            android:exported="false"
            android:label="@string/title_activity_nutri_coach_screen"
            android:theme="@style/Theme.Nutritrack" />
        <activity
            android:name=".presentation.activities.SettingsScreen"
            android:exported="false"
            android:label="@string/title_activity_settings_screen"
            android:theme="@style/Theme.Nutritrack" />
        <activity
            android:name=".presentation.activities.RegisterScreen"
            android:exported="false"
            android:label="@string/title_activity_register_screen"
            android:theme="@style/Theme.Nutritrack" />
        <activity
            android:name=".presentation.activities.Insights"
            android:exported="false"
            android:label="@string/title_activity_insights"
            android:theme="@style/Theme.Nutritrack" />
        <activity
            android:name=".presentation.activities.HomeScreen"
            android:exported="false"
            android:label="@string/title_activity_home_screen"
            android:theme="@style/Theme.Nutritrack" />
        <activity
            android:name=".presentation.activities.FoodIntakeQuestionnaire"
            android:exported="false"
            android:label="@string/title_activity_food_intake_questionnaire"
            android:theme="@style/Theme.Nutritrack" />
        <activity
            android:name=".presentation.activities.LoginScreen"
            android:exported="false"
            android:label="@string/title_activity_login_screen"
            android:theme="@style/Theme.Nutritrack" />
        <activity
            android:name=".presentation.activities.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Nutritrack">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>